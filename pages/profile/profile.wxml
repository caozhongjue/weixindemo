<!--logs.wxml-->
<view class="container">
  <view class="row">
    <view class="img">
      <image class="userinfo-avatar" src="{{imagesrc}}"></image>
    </view>
    <view class="name">
      <text class="userinfo-nickname">{{textattr}}</text>
    </view>
  </view>
  <button class="btn" wx:if="{{!hasUserInfo }}" type="primary" open-type="getUserInfo" bindgetuserinfo="getMyInfo">登录</button>
  <view class="more" wx:if="{{hasUserInfo }}">
    <view class="scan">
      <view class="scan1" bindtap="myCollect" id="{{openid}}">
        <text>我的收藏</text>
        <view class="sacntext1">></view>
      </view>
      <view class="scan2">
        <text>我的评论</text>
        <text class="sacntext1"> ></text>
       
      </view>

    </view>

  </view>
</view>