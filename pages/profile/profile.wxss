/**整个大容器**/
.container{
  padding: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;/*垂直布局*/
  align-items: center; /*垂直居中效果*/
  justify-content: space-around;/*view水平居中*/
}
/**行**/
.row{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  background-color: #FFFFFF;
  width: 96%;
  height: 220rpx;
  border-radius: 4%;
  box-shadow: 2px 2px 5px #DCDCDC;
}
/*图片容器*/
.img{
  width:40%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.userinfo-avatar {
  width: 150rpx;/*宽度128rpx*/
  height: 150rpx;/*高度128rpx*/
  border-radius: 50%; /*边框圆形*/
}
/*呢称容器*/
.name{
  width:60%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.userinfo-nickname {
  width: 100%;/*宽度128rpx*/
  height: 150rpx;/*高度128rpx*/
  line-height: 150rpx;/*文字使line-height 垂直居中*/
  text-align: center;/*文字使text-align 垂直居中*/
  font-family: 'Courier New', Courier, monospace;
  font-size: 20px;
  color:#080808
}
/*登录按钮*/
.btn{
  width: 150rpx;
  height: 150rpx;
  margin-top: 200rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 150rpx
}
/*收藏 评论的css*/
