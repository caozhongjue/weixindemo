/*整个大容器*/
.container {
  padding: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: column;/*垂直布局*/
  align-items: center; /*垂直居中效果*/
  justify-content: space-around;/*view水平居中*/
  background:  #DCDCDC
}
/*一行*/
.row{
  display: flex;
  width: 100%;
  height: 180rpx;
  background-color: white;
  margin-top: 20rpx
}
.log-img{
  width:120rpx;
  height: 120rpx;
  padding: 10rpx;
  border-radius:25%;
}
.rowtext{
  display: flex;
  flex-direction: column;
  width:80%;
  margin-left: 20rpx;
  height: 180rpx;
}
.item-title {
  font-size: 15px;
  font-family:  'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  color:  black;
  width:100%;
  overflow:hidden;
  text-overflow:ellipsis;
  display:block;/*内联对象需加*/
  word-break:keep-all;/* 不换行 */
  white-space:nowrap;/* 强制在同一行内显示所有文本,直到文本结束或者遭遇 br 对象。不换行 */
}
.rowdesc{
  height: 75rpx;
  font-size: 12px;
  color:  #44474b;
  width:100%;
  overflow:hidden;
  text-overflow:ellipsis;
  display:block;/*内联对象需加*/
  word-break:keep-all;/* 不换行 */
  /*letter-spacing: 2px;  字间距*/
  /*white-space:nowrap; 强制在同一行内显示所有文本,直到文本结束或者遭遇 br 对象。不换行 */
}
.itemcount{
  font-size: 12px;
  color:  #44474b;
  width:100%;
}
.loading{
   padding: 10rpx;  
   text-align: center;  
}
